# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Base de datos local (para desarrollo)
# MONGODB_URI=mongodb://localhost:27017/colegios_db

# Base de datos en la nube (MongoDB Atlas)
# Reemplaza esta URL con tu cadena de conexión de MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/colegios_db?retryWrites=true&w=majority

# Nombre de la base de datos
DB_NAME=colegios_db

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Puerto del servidor
PORT=3001

# Host del servidor
HOST=localhost

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# ===========================================
# CONFIGURACIÓN JWT
# ===========================================

# Clave secreta para JWT (¡CAMBIA ESTA EN PRODUCCIÓN!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Tiempo de expiración del token
JWT_EXPIRES_IN=24h

# Clave secreta para refresh token
JWT_REFRESH_SECRET=your-refresh-secret-key

# Tiempo de expiración del refresh token
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CONFIGURACIÓN CORS
# ===========================================

# Orígenes permitidos (separados por comas)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Permitir credenciales
CORS_CREDENTIALS=true

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Rondas de bcrypt para hash de contraseñas
BCRYPT_ROUNDS=12

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS
# ===========================================

# Ruta de subida de archivos
UPLOAD_PATH=./uploads

# Tamaño máximo de archivo (en bytes) - 10MB
MAX_FILE_SIZE=10485760

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================

# Ventana de tiempo para rate limiting (en ms) - 15 minutos
RATE_LIMIT_WINDOW_MS=900000

# Máximo número de requests por ventana
RATE_LIMIT_MAX=100




